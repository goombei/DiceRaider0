<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:sl="http://schemas.android.com/apk/res-auto"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <com.ssomai.android.scalablelayout.ScalableLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">


        <ImageView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:src="@mipmap/dialog_money"
            android:id="@+id/moneyImg"/>

        <Button
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="#00ff0000"
            android:id="@+id/dialogMoneyBtn"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            sl:scale_left="20"
            sl:scale_top="10"
            sl:scale_width="60"
            sl:scale_height="10"
            sl:textview_wrapcontent_direction="bottom"
            sl:textview_wrapcontent_resizesurrounded="true"
            sl:textview_wrapcontent_movesiblings="true"
            android:text="@string/event_treasure"
            android:textStyle="bold"
            sl:scale_textsize="7"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/event_gold"
            sl:scale_left="20"
            sl:scale_top="81"
            sl:scale_width="40"
            sl:scale_height="10"
            sl:scale_textsize="8"/>

        <TextView
            android:layout_width="148dp"
            android:layout_height="77dp"
            android:text="@string/dummy"
            sl:scale_left="55"
            sl:scale_top="81"
            sl:scale_width="30"
            sl:scale_height="10"
            sl:scale_textsize="8"
            android:textColor="@android:color/holo_orange_light"
            android:id="@+id/moneyTxt"/>

    </com.ssomai.android.scalablelayout.ScalableLayout>



</LinearLayout>