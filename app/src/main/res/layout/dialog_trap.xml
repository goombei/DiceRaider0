<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:sl="http://schemas.android.com/apk/res-auto"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    >

    <com.ssomai.android.scalablelayout.ScalableLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">


        <ImageView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:src="@mipmap/dialog_trap"/>

        <Button
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="#00ff0000"
            android:id="@+id/dialogTrapBtn"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            sl:scale_left="20"
            sl:scale_top="10"
            sl:scale_width="60"
            sl:scale_height="10"
            android:text="덫에 걸렸습니다!"
            android:textStyle="bold"
            sl:scale_textsize="7"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="체력 감소"
            sl:scale_left="20"
            sl:scale_top="83"
            sl:scale_width="40"
            sl:scale_height="10"
            sl:scale_textsize="8"/>

        <TextView
            android:layout_width="148dp"
            android:layout_height="77dp"
            android:text="-100"
            sl:scale_left="55"
            sl:scale_top="83"
            sl:scale_width="30"
            sl:scale_height="10"
            sl:scale_textsize="8"
            android:textColor="#9e2020"
            android:id="@+id/trapTxt"/>

    </com.ssomai.android.scalablelayout.ScalableLayout>



</LinearLayout>